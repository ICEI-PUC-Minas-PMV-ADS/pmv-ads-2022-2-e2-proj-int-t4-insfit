                <span class="btn-conteudo btn-conteudo--curtir">Curtir</span>
            </button>

            <script type="text/javascript">
                const button = document.querySelector(".btn");

                button.addEventListener('click', function () {
                    button.classList.toggle('curtido');
                })
            </script>
    <p></p>
