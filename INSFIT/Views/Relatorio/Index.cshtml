@model IEnumerable<INSFIT.Models.Relatorio>

@{
    ViewData["Title"] = "Index";
}

<h1>Relatório</h1>
   
 <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.altura)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_relatorio">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_relatorio">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_relatorio">Delete</a>
                <a asp-action="Media" asp-route-id="@item.Id_relatorio">Media</a>
            </td>
        </tr>
}
    </tbody>
   
<head>
    <link rel="stylesheet" href="~/css/Relatorio.css">

</head>

<body>
    

    <div id="container">

        <h2> Dados Básicos</h2>

        <div >

         <p>Qual seu peso ideal? (kg) </p>
         
            <input  class="input_area" id="pesid" type"number"/>
    </div>

    <div>
            <p>Qual seu peso atual? (kg) </p>
            <input class="input_area" id="pesoat" type"number" />
            </div>

              <button onclick="media()">Média</button>
    </div>
    

   <div class="container">
        <h2> Calculadora de IMC </h2>

      
   <p> Altura (cm) </p>
    <input class="input_area" id="altura" type="number" />

  
    <p> Peso (kg) </p>
    <input class="input_area" id="peso" type="number" />
  

    <button onclick="calculate()">Calcular</button

    </div>
    <textarea name="" id="text_area" rows="3"> </textarea>
 
    
    <script src="~/js/Relatorio.js"> </script>
</body>



